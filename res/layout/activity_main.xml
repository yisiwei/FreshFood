<?xml version="1.0" encoding="utf-8"?>
<!-- 主界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/index_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="#FAFAFA"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/index_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_home_on"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/title_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_news"
            android:gravity="center"
            android:text="@string/news"
            android:textColor="@color/title_color_normal"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_order"
            android:gravity="center"
            android:text="@string/order"
            android:textColor="@color/title_color_normal"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/index_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/index_my"
            android:gravity="center"
            android:text="@string/my"
            android:textColor="@color/title_color_normal"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>